{
	"angularCompilerOptions": {
		"debug": false
	},
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	},
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"baseUrl": "src",
		"sourceMap": true,
		"declaration": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2016",
			"dom"
		]
	},
	"exclude": [
		"node_modules"
	]
}
